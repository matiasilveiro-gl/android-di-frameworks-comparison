<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding_between"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:background="@color/surface_dark_grey">

    <ImageView
        android:id="@+id/cv_now_playing_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/movie_descr_img"
        app:layout_constraintDimensionRatio="h,2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cv_now_playing_title"
        style="@style/listItemTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/movie_title_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_now_playing_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
